---
import Layout from '../layouts/Layout.astro';
import {frontmatter, Content} from '../content/index.md';
import buildingImgOne from '../assets/3599-building-1.png'
import buildingImgTwo from '../assets/3559-building-2.png'

// const res = await fetch("https://script.google.com/macros/s/AKfycbwU0J3qfBEbK9PWdg5JAZZKea6NxvzKxQaCM9tkNp8CH3D8wPosUlaYt4f_MGm-bE8uiA/exec")
// const {data} = await res.json()
// console.log("DATAAA",data)
---

<Layout title="Welcome to Horizon" backgroundColor='bg-barely-grey'>
	<main class="container pt-5">
    <div class="row g-5">
      <!-- Welcome -->
      <div class="col-lg-6">
        <h1 class="text-center mt-1">{frontmatter.welcome}</h1>
        <Content/>
      </div>
      <!-- ANNOUNCEMENTS -->
      <div class="col-lg-6 border rounded bg-slate ">
        <div class="container mt-1">   
          <h1 class="text-center">{frontmatter.listGroup.heading}</h1>
        </div>
        <div class="container list-group p-0 overflow-scroll" style="max-height:500px">
          {
            frontmatter.listGroup.list.map((i, idx) => {
              return (
                <a href="#" class={`list-group-item list-group-item-action text-start mb-4 ${!idx && "active"}`} aria-current={`${!idx && "true"}`}>
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{i.heading}</h5>
                    <small class="d-none d-md-block">{i.super}</small>
                  </div>
                  <p class=" mt-4">{i.detail}</p>
                  {/* <small>{i.subdetail}</small> */}
                </a>
              )
            })
          }
        </div>
      </div>
      <!-- PHOTO GALLERY -->
      <div id="carouselExample" class="col-12 px-4 carousel slide h-50" style="margin-bottom: 100px">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src={buildingImgOne.src} alt="exterior from broadway">
          </div>
          <div class="carousel-item">
            <img src={buildingImgTwo.src} alt="exterior - front door">
          </div>
        </div>
        <button class="carousel-control-prev bg-dark mx-4" style="--bs-bg-opacity: .7;" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next bg-dark mx-4" style="--bs-bg-opacity: .7;" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
   
    </div>
  </main>
</Layout>
